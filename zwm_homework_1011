    int n;
    long long result_part=0;
    long long result=0;
    
    printf("请输入楼梯的阶数：\n");
    scanf("%d",&n);
    
   
        for (int x = n / 2, y; x >= 0; x--) {
            y = n - 2 * x;
            result_part = factorial(x + y) / (factorial(x) * factorial(y));
            result = result + result_part;
        }
     printf("共有%lld种走法\n",result);
    return 0;
    
}
